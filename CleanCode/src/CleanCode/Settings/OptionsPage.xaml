<UserControl x:Class="CleanCode.Settings.OptionsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:settings="clr-namespace:CleanCode.Settings"
             xmlns:resources="clr-namespace:CleanCode.Resources"
             mc:Ignorable="d"              
             d:DataContext="{d:DesignInstance settings:OptionsViewModel}">
    <UserControl.Resources>
        <resources:LocalizedStrings x:Key="LocalizedStrings" />
    </UserControl.Resources>
    <StackPanel Margin="5">
        <StackPanel.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="DockPanel.Dock" Value="Right" />
                <Setter Property="Width" Value="30" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="TextAlignment" Value="Center" />
            </Style>
            <Style x:Key="GridStyle" TargetType="Grid">
                <Setter Property="Margin" Value="5" />
            </Style>
        </StackPanel.Resources>
        <Grid Style="{StaticResource GridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DockPanel>
                <CheckBox IsChecked="{Binding EnabledMethodTooLong}">
                    <CheckBox.Content>
                        <TextBlock
                            Text="{Binding Source={StaticResource LocalizedStrings}, Path=Settings.MethodTooLongCheck}" />
                    </CheckBox.Content>
                </CheckBox>
            </DockPanel>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Text="{Binding Source={StaticResource LocalizedStrings}, Path=Settings.TooLongLinesPerMethod}" />
                <TextBox DockPanel.Dock="Right" Text="{Binding MaxLinesPerMethod ,UpdateSourceTrigger=PropertyChanged}" Width="30" Grid.Column="1" />
            </Grid>
        </Grid>
        <Grid Style="{StaticResource GridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DockPanel>
                <CheckBox IsChecked="{Binding EnabledMethodTooLong}">
                    <CheckBox.Content>
                        <TextBlock
                            Text="{Binding Source={StaticResource LocalizedStrings}, Path=Settings.MaximumDependenciesCheck}" />
                    </CheckBox.Content>
                </CheckBox>
            </DockPanel>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Text="{Binding Source={StaticResource LocalizedStrings}, Path=Settings.TooManyDependencies}" />
                <TextBox DockPanel.Dock="Right" Text="{Binding MaxDependencies, UpdateSourceTrigger=PropertyChanged}" Width="30" Grid.Column="1" />
            </Grid>
        </Grid>
        <Grid Style="{StaticResource GridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DockPanel>
                <CheckBox IsChecked="{Binding EnabledMethodTooLong}">
                    <CheckBox.Content>
                        <TextBlock Text="{Binding Source={StaticResource LocalizedStrings}, Path=Settings.TooManyMethodArguments}" />
                    </CheckBox.Content>
                </CheckBox>
            </DockPanel>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Text="{Binding Source={StaticResource LocalizedStrings}, Path=Settings.TooManyMethodArguments}" />
                <TextBox Text="{Binding MaxMethodArguments, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Column="1" />
            </Grid>
        </Grid>
        <Grid Style="{StaticResource GridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DockPanel>
                <CheckBox IsChecked="{Binding EnabledMaxDepth}">
                    <CheckBox.Content>
                        <TextBlock Text="{Binding Source={StaticResource LocalizedStrings}, Path=Settings.ExcessiveDepthCheck}" />
                    </CheckBox.Content>
                </CheckBox>
            </DockPanel>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Text="{Binding Source={StaticResource LocalizedStrings}, Path=Settings.ExcessiveDepth}" />
                <TextBox Text="{Binding MaxDepth, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Column="1" />
            </Grid>
        </Grid>
        <Grid Style="{StaticResource GridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DockPanel>
                <CheckBox IsChecked="{Binding EnableClassTooBig}">
                    <CheckBox.Content>
                        <TextBlock Text="{Binding Source={StaticResource LocalizedStrings}, Path=Settings.ClassTooBigCheck}" />
                    </CheckBox.Content>
                </CheckBox>
            </DockPanel>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Text="{Binding Source={StaticResource LocalizedStrings}, Path=Settings.ClassTooBig}" />
                <TextBox Text="{Binding MaxMethodsPerClass, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Column="1" />
            </Grid>
        </Grid>
        <Grid Style="{StaticResource GridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DockPanel>
                <CheckBox IsChecked="{Binding EnableClassTooBig}">
                    <CheckBox.Content>
                        <TextBlock Text="{Binding Source={StaticResource LocalizedStrings}, Path=Settings.MaxChainedReferencesCheck}" />
                    </CheckBox.Content>
                </CheckBox>
            </DockPanel>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Text="{Binding Source={StaticResource LocalizedStrings}, Path=Settings.MaxChainedReferences}" />
                <TextBox Text="{Binding MaxChainedReferences, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Column="1" />
            </Grid>
        </Grid>
        <Grid Style="{StaticResource GridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <DockPanel>
                <CheckBox IsChecked="{Binding EnableMinimumMethodNameLegtht}">
                    <CheckBox.Content>
                        <TextBlock Text="{Binding Source={StaticResource LocalizedStrings}, Path=Settings.MinimumMethodNameLengthCheck}" />
                    </CheckBox.Content>
                </CheckBox>
            </DockPanel>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Text="{Binding Source={StaticResource LocalizedStrings}, Path=Settings.MinimumMethodNameLength}" />
                <TextBox Text="{Binding MinimumMethodNameLegth, UpdateSourceTrigger=PropertyChanged}"
                         Grid.Column="1" />
            </Grid>
        </Grid>
    </StackPanel>

</UserControl>
